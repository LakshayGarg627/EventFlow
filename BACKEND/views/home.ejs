<!-- Resume container for other sections -->
<div class="container">

<!-- Featured Events Section -->
<section class="featured-section">
    <div class="container">
        <div class="section-header-new">
            <h2 class="section-title-new">
                <span class="title-highlight">Featured</span> Events
            </h2>
            <p class="section-subtitle-new">Don't miss out on these amazing experiences</p>
        </div>
        
        <div class="events-grid">
            <% if(allEvents && allEvents.length > 0) { %>
                <% for(let event of allEvents.slice(-3).reverse()){ %>
                    <div class="modern-event-card">
                        <div class="event-image-container">
                            <img src="<%= event.image%>" alt="<%= event.title %>" class="event-img">
                            <div class="event-type-badge-new">
                                <%= event.eventType %>
                            </div>
                            <div class="event-overlay-new">
                                <a href="/events/<%= event._id %>" class="view-event-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                        
                        <div class="event-content-new">
                            <h3 class="event-title-new"><%= event.title %></h3>
                            
                            <div class="event-details-new">
                                <div class="event-detail-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span><%= new Date(event.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
                                </div>
                                <div class="event-detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= event.location %></span>
                                </div>
                            </div>
                            
                            <div class="event-footer-new">
                                <div class="event-price-new">
                                    <span class="price-label">Starting at</span>
                                    <span class="price-value">‚Çπ<%= event.entryFee %></span>
                                </div>
                                <a href="/events/<%= event._id %>" class="event-btn-new">
                                    View Details
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="no-events-new">
                    <div class="no-events-icon">
                        <i class="fas fa-calendar-plus"></i>
                    </div>
                    <h3>No Events Yet</h3>
                    <p>Be the first to create an amazing event in your community!</p>
                    <a href="/events/new" class="btn-primary-new">
                        <i class="fas fa-plus"></i>
                        Create First Event
                    </a>
                </div>
            <% } %>
        </div>
        
        <div class="section-footer">
            <a href="/events" class="view-all-btn">
                View All Events
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>

