<%- layout("./layouts/boilerplate.ejs") %>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Discover Amazing Events</h1>
        <p class="hero-subtitle">Connect with communities and create unforgettable memories</p>
        <a href="/events/new" class="btn hero-btn">
            <i class="fas fa-plus"></i>
            Create Your Event
        </a>
    </div>
    <div class="hero-overlay"></div>
</div>

<!-- Events Section -->
<div class="events-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Events</h2>
            <p class="section-subtitle">Explore exciting events happening around you</p>
        </div>

        <div class="filterSection">
           <input id="search" type="text" placeholder="Search Events or categories" class="filter-input" >
            <select id="sort" class="filter-select">
                <option value="date_desc">Newest</option>
                <option value="date_asc">Oldest</option>
                <option value="amount_desc">Amount: High → Low</option>
                <option value="amount_asc">Amount: Low → High</option>
            </select>
        </div>
        
        <div class="row g-4">
            <% for(let event of allEvents.slice().reverse()){ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="event-card">
                        <div class="event-image-wrapper">
                            <img src="<%= event.image%>" alt="<%= event.title %>" class="event-image">
                            <div class="event-overlay">
                                <div class="event-badges">
                                    <span class="badge event-type-badge"><%= event.eventType %></span>
                                    <span class="badge event-category-badge"><%= event.eventCategory %></span>
                                </div>
                                <a href="/events/<%= event.id %>" class="btn-overlay">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                        
                        <div class="event-card-content">
                            <h3 class="event-card-title"><%= event.title %></h3>
                            
                            <div class="event-meta">
                                <div class="event-date">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span>
                                        <% 
                                        let date = new Date(event.date); 
                                        let options = { 
                                            month: 'short', 
                                            day: 'numeric', 
                                            year: 'numeric' 
                                        };
                                        %>
                                        <%= date.toLocaleDateString('en-US', options) %>
                                    </span>
                                </div>
                                
                                <div class="event-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= event.location %></span>
                                </div>
                            </div>
                            
                            <div class="event-price">
                                <span class="price-label">Starting from</span>
                                <span class="price-value">₹<%= event.entryFee.toLocaleString("en-IN") %></span>
                            </div>
                            
                            <div class="event-card-footer">
                                <a href="/events/<%= event.id %>" class="btn btn-primary event-btn">
                                    <i class="fas fa-ticket-alt"></i>
                                    Book Now
                                </a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
        <% if (allEvents.length === 0) { %>
            <div class="empty-state">
                <div class="empty-state-content">
                    <i class="fas fa-calendar-times empty-icon"></i>
                    <h3 class="empty-title">No Events Found</h3>
                    <p class="empty-text">Be the first to create an amazing event!</p>
                    <a href="/events/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Create First Event
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
function toggleFavorite(btn) {
    const icon = btn.querySelector('i');
    if (icon.classList.contains('far')) {
        icon.classList.remove('far');
        icon.classList.add('fas');
        btn.style.color = '#e74c3c';
    } else {
        icon.classList.remove('fas');
        icon.classList.add('far');
        btn.style.color = '';
    }
}
</script>

